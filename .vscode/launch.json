    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'ziskemu'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=ziskemu"
                ],
                "filter": {
                    "name": "ziskemu",
                    "kind": "bin"
                }
            },
            "args": [
                "-e",
                "emulator/benches/data/my.elf",
                "-i",
                "emulator/benches/data/input.bin",
                "-c",
                "-m",
                "-x",
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'riscv2zisk'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=riscv2zisk"
                ],
                "filter": {
                    "name": "riscv2zisk",
                    "kind": "bin"
                }
            },
            "args": ["riscof/riscof_work/rv64i_m/A/src/amoxor.w-01.S/dut/my.elf", "rom.json", "rom.pil"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Bench executable 'ziskemu'",
            "cargo": {
                "args": [
                    "bench"
                ],
                "filter": {
                    "name": "ziskemu",
                    "kind": "bin"
                }
            },
            "cwd": "${workspaceFolder}/emulator"
        }
    ]
}