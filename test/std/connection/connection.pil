airtemplate Connection1(const int N = 2**3) {
    if (N != 2**3) error(`Unsupported N = ${N}`);

    col witness a,b,c;

    const int k = Goldilocks_k;
    const int k2 = Goldilocks_k**2;
    col fixed S1,S2,S3;
    for (int i = 0; i < N; i++) {
        S1[i] = GROUP3[i];
        S2[i] = k * GROUP3[i];
        S3[i] = k2 * GROUP3[i];
    }

    // Trivial case: permutation is the identity

    // Old Interface
    connection(TEST_OPID, [a, b, c], [S1, S2, S3]);
};

